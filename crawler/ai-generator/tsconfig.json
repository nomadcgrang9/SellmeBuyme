{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "lib": ["ES2022"],
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "allowJs": true,
    "outDir": "./dist",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@/lib/*": ["../lib/*"],
      "@/sources/*": ["../sources/*"]
    },
    "types": ["node"]
  },
  "include": [
    "**/*.ts",
    "../lib/**/*.js",
    "../sources/**/*.js"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "temp"
  ]
}
